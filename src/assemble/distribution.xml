<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>${project.build.directory}/${project.build.finalName}.jar</source>
      <outputDirectory>/lib</outputDirectory>
      <filtered>false</filtered>
    </file>
    <file>
      <source>${project.build.directory}/dependency/sqljdbc_auth.dll</source>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <outputDirectory>/img</outputDirectory>
      <directory>src/main/resources/img</directory>
      <includes>
        <include>splash.gif</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>src/main/resources</directory>
      <includes>
        <include>sqljdbc_auth.dll</include>
        <include>dataSources.xml</include>
        <include>database.properties</include>
        <include>properties</include>
        <include>county_coordinates.txt</include>
        <include>splash.gif</include>
        <include>login.conf</include>
        <include>krb5.ini</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>src/scripts</directory>
      <includes>
        <include>*.bat</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <outputDirectory>/META-INF</outputDirectory>
      <directory>META-INF</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>.</directory>
      <includes>
        <include>vpr.h2.db</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>